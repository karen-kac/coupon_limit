# Environment Configuration for Coupon Limit App

# Production Environment
NODE_ENV=production

# Backend API Configuration
NEXT_PUBLIC_API_URL=https://your-app.vercel.app/api
API_URL=https://your-app.vercel.app/api

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Database Configuration (fallback)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Development Settings
SQL_DEBUG=false
CREATE_SAMPLE_DATA=false

# Security Settings
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=info

# File Upload (if using Cloudinary or similar)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Application Settings
APP_NAME=Coupon Limit
APP_VERSION=1.0.0
DEFAULT_COUPON_RADIUS_METERS=20
MAX_COUPONS_PER_USER=50